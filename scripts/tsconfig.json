// https://blog.dkvirus.top/frontend/typescript/tsconfig1.html
{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "allowJs": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true
  },
  "include": ["src"],
  "references": []
}
